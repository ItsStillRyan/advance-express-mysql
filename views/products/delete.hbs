{{#extends 'base'}}
{{#block 'content'}}
<form method="POST">

<h1>Delete: {{product.name}}</h1>
    <div class-"alert alert-danger">
        Are you sure you want to delete: {{product.name}}
        <p class="mt-3">
            <input type="submit" value="Delete" class="btn btn-danger"/>
            <a href="/products" class="btn btn-success">Cancel</a>
        </p>
    </div>

</form>
{{/block}}
{{/extends}}