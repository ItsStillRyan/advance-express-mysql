{{#extends 'base'}}
{{#block 'content'}}
<h1>Product List</h1>
<div>
    <a href="/products/create" class="btn btn-success mb-3">Create Product Listing</a>
</div>

<table class="table">
    <thread>
        <tr>
            <th>
                Name
            </th>
            <th>
                Cost
            </th>
            <th>
                Description
            </th>
        </tr>
    </thread>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.description}}</td>
            <td>
                <a href="/products/{{this.id}}/update" class="btn btn-primary">Update</a>
                <a href="/products/{{this.id}}/delete" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>




</table>
{{/block}}
{{/extends}}